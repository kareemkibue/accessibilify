{
    "compilerOptions": {        
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "es6",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "target": "es5",
        "lib": [
            "es2015",
            "es2017",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}